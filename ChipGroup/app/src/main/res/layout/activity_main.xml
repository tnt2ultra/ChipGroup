<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonInputChip"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:text="Input Chip"
        app:layout_constraintBottom_toTopOf="@+id/buttonFilterChip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <Button
        android:id="@+id/buttonFilterChip"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:text="Filter Chip"
        app:layout_constraintBottom_toTopOf="@+id/buttonChoiceChip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonInputChip">

    </Button>

    <Button
        android:id="@+id/buttonChoiceChip"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:text="Choice Chip"
        app:layout_constraintBottom_toTopOf="@+id/buttonActionChip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFilterChip">

    </Button>

    <Button
        android:id="@+id/buttonActionChip"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:text="Action Chip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonChoiceChip">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>